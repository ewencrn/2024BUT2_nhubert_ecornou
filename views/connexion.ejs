<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Locafit - Inscription / Connexion</title>
    <link rel="stylesheet" href="/public/css/connexion.css">
</head>
<body>

<main>
    <!-- Formulaire d'inscription -->
    <section id="signup-form" class="form-section">
        <h2>Inscription</h2>
        <form id="registerForm">
            <label for="username">Nom d'utilisateur</label>
            <input type="text" id="username" name="username" required>

            <label for="email">Email</label>
            <input type="email" id="email" name="email" required>

            <label for="password">Mot de passe</label>
            <input type="password" id="password" name="password" required>

            <label for="confirmPassword">Confirmer le mot de passe</label>
            <input type="password" id="confirmPassword" name="confirmPassword" required>

            <button type="button" onclick="register()">S'inscrire</button>
        </form>
    </section>

    <!-- Formulaire de connexion -->
    <section id="login-form" class="form-section">
        <h2>Connexion</h2>
        <form id="loginForm">
            <label for="loginEmail">Email</label>
            <input type="email" id="loginEmail" name="loginEmail" required>

            <label for="loginPassword">Mot de passe</label>
            <input type="password" id="loginPassword" name="loginPassword" required>

            <button type="button" onclick="login()">Se connecter</button>
        </form>
    </section>
</main>

<script src="/models/user.js"></script>

</body>
</html>
